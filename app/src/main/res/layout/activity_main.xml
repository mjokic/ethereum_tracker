<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wifi.ethereumtracker.activities.MainActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/textViewMyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@+id/textViewEtherValue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ETH ="
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@+id/textViewEtherValue"
        android:layout_toRightOf="@+id/textViewMyValue"
        />

    <!--<TextView-->
        <!--android:id="@+id/textViewEtherValue"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="90sp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:text=""-->
        <!--android:layout_toRightOf="@+id/textViewCurrencySign"-->
        <!--android:layout_toEndOf="@+id/textViewCurrencySign"-->
    <!--/>-->

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/textViewEtherValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="90sp"
        android:layout_centerInParent="true"
        android:text=""
        android:layout_toRightOf="@+id/textViewCurrencySign"
        android:layout_toEndOf="@+id/textViewCurrencySign"
        />

    <TextView
        android:id="@+id/textViewCurrencySign"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:gravity="bottom"
        android:textSize="40sp"
        android:textColor="#fff"
        />


    <TextView
        android:id="@+id/textView24HrChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_below="@id/textViewEtherValue"
        />



</RelativeLayout>
