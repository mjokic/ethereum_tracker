<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wifi.ethereumtracker.activities.MainActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/textViewMyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@+id/textViewEtherValue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ETH ="
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@+id/textViewEtherValue"
        android:layout_toRightOf="@+id/textViewMyValue"
        />

    <TextView
        android:id="@+id/textViewEtherValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/positive"
        android:textSize="90sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        />



</RelativeLayout>
